{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/debug",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build/debug"
      ],
      "dependsOn": [
        "Configure Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Debug",
      "type": "shell",
      "command": "./bin/debug/ProjectTUI",
      "problemMatcher": []
    },
    {
      "label": "Configure Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/release",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build/release"
      ],
      "dependsOn": [
        "Configure Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Run Release",
      "type": "shell",
      "command": "./bin/release/ProjectTUI",
      "problemMatcher": []
    }
  ]
}
